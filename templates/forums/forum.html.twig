{% extends 'base.html.twig' %}

{% block title %}Forums : {{ forum.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-12 col-md-12 col-sm-12">

                <a href="{{ path('forums.index') }}">Forums</a>
                {% for part in forum | breadcrumb %}
                    {% if loop.last %}
                        > {{ part.title }}
                    {% else %}
                        > <a href="{{ part.url }}">{{ part.title }}</a>
                    {% endif %}
                {% endfor %}

                <div class="card bg-secondary mb-4">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-5 col-md-5 col-sm-5">{{ forum.title }}</div>
                            {% if subforums|length > 0 %}
                                <div class="col-lg-2 col-md-2 col-sm-2 text-center">SUJETS</div>
                                <div class="col-lg-2 col-md-2 col-sm-2 text-center">MESSAGES</div>
                                <div class="col-lg-3 col-md-3 col-sm-3">DERNIER MESSAGE</div>
                            {% else %}
                                <div class="col-lg-2 col-md-2 col-sm-2 text-center">PAR</div>
                                <div class="col-lg-2 col-md-2 col-sm-2 text-center">REPONSES</div>
                                <div class="col-lg-3 col-md-3 col-sm-3">DERNIER MESSAGE</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-body">
                        {% for subforum in subforums %}
                            {{ loop.first ? '<div class="row">' : '<div class="row mt-4">' }}
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <h5 class="card-title">
                                    <a href="{{ path('forum.show', {'category_slug': subforum.rootCategory.slug, 'id': subforum.id, 'slug': subforum.slug}) }}">{{ subforum.title }}</a>
                                </h5>
                                <p class="card-text">{{ subforum.description }}</p>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 text-center">{{ subforum.totalThreads }}</div>
                            <div class="col-lg-2 col-md-2 col-sm-2 text-center">X</div>
                            <div class="col-lg-3 col-md-3 col-sm-3">LE 09/07/2019 PAR <a href="#"><strong>COTON</strong></a></div>
                    </div>
                    {% endfor %}

                    {% if subforums|length > 0 %}
                        <div class="row mt-3">
                            <div class="col-lg-5"></div>
                            <div class="col-lg-2 text-center">
                                <h5>PAR</h5>
                            </div>
                            <div class="col-lg-2 text-center">
                                <h5>REPONSES</h5>
                            </div>
                            <div class="col-lg-3">
                                <h5>DERNIER MESSAGE</h5>
                            </div>
                        </div>
                    {% endif %}

                    {% for thread in threads %}
                        <div class="row mb-1">
                            <div class="col-lg-5">
                                <a href="#">{{ thread.title }}</a>
                            </div>
                            <div class="col-lg-2 text-center">
                                {% if thread.author is null %}
                                    Compte supprim√©
                                {% else %}
                                    <a href="{{ user_profile_link(thread.author) }}">{{ thread.author.pseudo }}</a>
                                {% endif %}
                            </div>
                            <div class="col-lg-2 text-center">X</div>
                            <div class="col-lg-3">LE 09/07/2019 PAR <a href="#"><strong>COTON</strong></a></div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}