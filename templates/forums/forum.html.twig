{% extends 'base.html.twig' %}

{% block title %}{{ forum.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .breadcrumb {
            padding: 0.16rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-12 col-md-12 col-sm-12">

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('forums.index') }}">Forums</a></li>
                        {% for part in forum | breadcrumb %}
                            {% if loop.last %}
                                <li class="breadcrumb-item active" aria-current="page">{{ part.title }}</li>
                            {% else %}
                                <li class="breadcrumb-item"><a href="{{ part.url }}">{{ part.title }}</a></li>
                            {% endif %}
                        {% endfor %}
                    </ol>
                </nav>

                <div class="card bg-secondary mb-4">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4">{{ forum.title }}</div>
                            {% if subforums|length > 0 %}
                                <div class="col-lg-2 col-md-2 col-sm-2 text-center">SUJETS</div>
                                <div class="col-lg-2 col-md-2 col-sm-2 text-center">MESSAGES</div>
                                <div class="col-lg-3 col-md-3 col-sm-3">DERNIER MESSAGE</div>
                            {% else %}
                                <div class="col-lg-2 col-md-2 col-sm-2 text-center">PAR</div>
                                <div class="col-lg-2 col-md-2 col-sm-2 text-center">MESSAGES</div>
                                <div class="col-lg-4 col-md-4 col-sm-4">DERNIER MESSAGE</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-body">
                        {% for subforum in subforums %}
                            {{ loop.first ? '<div class="row">' : '<div class="row mt-4">' }}
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <h5 class="card-title">
                                    <a href="{{ path('forum.show', {'category_slug': subforum.rootCategory.slug, 'id': subforum.id, 'slug': subforum.slug}) }}">{{ subforum.title }}</a>
                                </h5>
                                <p class="card-text">{{ subforum.description }}</p>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 text-center">{{ subforum.totalThreads }}</div>
                            <div class="col-lg-2 col-md-2 col-sm-2 text-center">{{ subforum.totalMessages }}</div>
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                {{ subforum.lastMessage.publishedAt|ago }} par
                                {% if subforum.lastMessage.author is null %}
                                    Compte supprimé
                                {% else %}
                                    {{ user_profile_link(subforum.lastMessage.author) }}
                                {% endif %}
                            </div>
                    </div>
                    {% endfor %}

                    {% if subforums|length > 0 %}
                        <div class="row mt-3">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-2 text-center">
                                <h5>PAR</h5>
                            </div>
                            <div class="col-lg-2 text-center">
                                <h5>MESSAGES</h5>
                            </div>
                            <div class="col-lg-4">
                                <h5>DERNIER MESSAGE</h5>
                            </div>
                        </div>
                    {% endif %}

                    {% for thread in threads %}
                        <div class="row mb-1">
                            <div class="col-lg-4">
                                {{ thread.thread.locked ? '<i class="fas fa-lock"></i>' }}
                                <a href="{{ path('thread.show', {'slug': thread.thread.slug}) }}">{{ thread.thread.title }}</a>
                            </div>
                            <div class="col-lg-2 text-center">
                                {% if thread.thread.author is null %}
                                    Compte supprimé
                                {% else %}
                                    {{ user_profile_link(thread.thread.author) }}
                                {% endif %}
                            </div>
                            <div class="col-lg-2 text-center">{{ thread.nbMessages }}</div>
                            <div class="col-lg-4">
                                {{ thread.thread.lastMessage.publishedAt|ago }} par
                                {% if thread.thread.lastMessage.author is null %}
                                    Compte supprimé
                                {% else %}
                                    {{ user_profile_link(thread.thread.lastMessage.author) }}
                                {% endif %}
                            </div>
                        </div>
                    {% else %}
                        Ce forum ne dispose pas encore de sujets.
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}