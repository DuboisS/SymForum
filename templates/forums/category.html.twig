{% extends 'base.html.twig' %}

{% block title %}Forums : {{ category.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-12">
                <a href="{{ path('forums') }}">Forums</a> > {{ category.title }}
                <div class="card bg-secondary mb-4">
                    <div class="card-header">{{ category.title }}</div>

                    {% for forum in category.forums %}
                        <div class="card-body">
                            <h4 class="card-title"><a href="{{ path('forum.show', {'category_slug': forum.category.slug, 'id': forum.id, 'slug': forum.slug}) }}">{{ forum.title }}</a></h4>
                            <p class="card-text">{{ forum.description }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}