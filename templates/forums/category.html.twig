{% extends 'base.html.twig' %}

{% block title %}{{ category.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-12">
                <div class="card bg-secondary mb-4">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-5 col-md-5 col-sm-5">{{ category.title }}</div>
                            <div class="col-lg-2 col-md-2 col-sm-2 text-center">SUJETS</div>
                            <div class="col-lg-2 col-md-2 col-sm-2 text-center">MESSAGES</div>
                            <div class="col-lg-3 col-md-3 col-sm-3">DERNIER MESSAGE</div>
                        </div>
                    </div>

                    {% for forum in forums %}
                        {% include 'forums/_forum_card.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}