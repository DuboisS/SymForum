{% extends 'base.html.twig' %}

{% block title %}Sujet : {{ thread.title }} par {{ thread.author.pseudo }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-12 col-md-12 col-sm-12">

                {% for message in messages %}
                    <div class="card bg-secondary mb-4 d-flex" id="{{ message.id }}">
                        <div class="card-header">{{ thread.title }}</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-2 text-center">
                                    {% if message.author is null %}
                                        Compte supprimé
                                    {% else %}
                                        {{ user_profile_link(message.author) }}
                                    {% endif %}
                                </div>
                                <div class="col-lg-10">{{ message.content|purify }}</div>
                            </div>

                            <div class="row mt-3">
                                <div class="col text-right">
                                    Posté le {{ message.publishedAt|date('d/m/Y à H:i:s') }}
                                    {% if (message.author == app.user) and (message.thread.locked) is null %}
                                        - <a href="{{ path('forums.message.edit', {'id': message.id}) }}">Editer</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {% if not thread.locked %}
                    {% if app.user %}
                        <div class="mb-3">
                            <p class="text-center">
                                Connecté en tant que {{ app.user.username }}, vous pouvez répondre :
                            </p>
                            {% include 'forums/_form_message.html.twig' %}
                        </div>
                    {% else %}
                        <p class="text-center">
                            <a href="{{ path('user.login') }}">Connectez-vous pour répondre.</a>
                        </p>
                    {% endif %}
                {% else %}
                    {% if app.user %}
                        <p class="text-center">Ce sujet est verrouillé, vous ne pouvez donc pas y répondre.</p>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}