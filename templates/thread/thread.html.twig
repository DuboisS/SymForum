{% extends 'modnav.html.twig' %}

{% block title %}{{ thread.title }} par {{ thread.author is not null ? thread.author.pseudo : 'Compte supprimé' }}{% endblock %}

{% block modnav_elements %}
    {% if thread.locked %}
        <li>
            <a href="{{ path('thread.unlock', {'id': thread.id}) }}" data-toggle="tooltip"
               title="Ouvrir le sujet">
                <i class="fas fa-lock-open rotate"></i>
            </a>
        </li>
    {% else %}
        <li>
            <a href="{{ path('thread.lock', {'id': thread.id}) }}" data-toggle="tooltip"
               title="Fermer le sujet">
                <i class="fas fa-lock rotate"></i>
            </a>
        </li>
    {% endif %}
    <li>
        <a href="{{ path('thread.delete', {'id': thread.id}) }}" data-toggle="tooltip"
           title="Supprimer le sujet">
            <i class="fas fa-trash-alt rotate"></i>
        </a>
    </li>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-12 col-md-12 col-sm-12">

                {% for message in messages %}
                    <div class="card bg-secondary mb-4 d-flex" id="{{ message.id }}">
                        <div class="card-header">{{ thread.title }}</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-2 text-center">
                                    {% set author = message.author %}
                                    {{ user_profile_link(author) }}

                                    {% if author is not null %}
                                        {% set role = user_profile_role(author) %}
                                        {{ role ? role }}
                                    {% endif %}
                                </div>
                                <div class="col-lg-10">{{ message.content|purify }}</div>
                            </div>

                            <div class="row mt-3">
                                <div class="col text-right">
                                    Posté le {{ message.publishedAt|date('d/m/Y à H:i:s') }}
                                    {% if (message.author == app.user) and (message.thread.locked == false) %}
                                        - <a href="{{ path('message.edit', {'id': message.id}) }}">Editer</a>
                                    {% endif %}
                                    {% if is_granted('ROLE_MODERATOR') %}
                                        - <a href="{{ path('message.delete', {'id': message.id}) }}">Supprimer</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {% if not thread.locked %}
                    {% if app.user %}
                        <div class="mb-3">
                            <p class="text-center">
                                Connecté en tant que {{ app.user.pseudo }}, vous pouvez répondre :
                            </p>
                            {% include 'message/_form_message.html.twig' %}
                        </div>
                    {% else %}
                        <div class="alert alert-info text-center">
                            <a href="{{ path('security.login') }}">Connectez-vous pour répondre.</a>
                        </div>
                    {% endif %}
                {% else %}
                    {% if app.user %}
                        <div class="alert alert-warning text-center">Ce sujet est verrouillé, vous ne pouvez donc pas y
                            répondre.
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}