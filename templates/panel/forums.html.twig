{% extends 'base.html.twig' %}

{% block title %}Forums{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-12 col-md-12 col-sm-12">
                <h1>
                    <span>Forums</span>
                    <button class="pull-right btn btn-primary disabled">Ajouter</button>
                </h1>
                <div class="mt-3">
                    <table class="table table-sm">
                        <thead>
                            <tr class="d-flex">
                                <th class="col-2">Position</th>
                                <th class="col-5">Titre</th>
                                <th class="col-3">Cat√©gorie</th>
                                <th class="col-2">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="thead-light">
                        {% for forum in forums %}
                            <tr class="d-flex">
                                <td class="col-2">{{ forum.position }}</td>
                                <td class="col-5">{{ forum.title }}</td>
                                <td class="col-3">{{ forum.category.title }}</td>
                                <td class="col-3">
                                    <button class="btn btn-primary btn-sm disabled">Modifier</button> -
                                    <button class="btn btn-danger btn-sm disabled">Supprimer</button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
