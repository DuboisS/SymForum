{% extends 'layouts/full-width.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block content %}
    <h1>
        <span>Catégories</span>
        <button class="pull-right btn btn-primary disabled"><i class="fas fa-plus"></i></button>
    </h1>

    <div class="mt-3">
        <table class="table table-sm">
            <thead>
            <tr class="d-flex">
                <th class="col-2">Position</th>
                <th class="col-8">Titre</th>
                <th class="col-2">Actions</th>
            </tr>
            </thead>
            <tbody class="thead-light">
            {% for category in categories %}
                <tr class="d-flex">
                    <td class="col-2">{{ category.position }}</td>
                    <td class="col-8">{{ category.title }}</td>
                    <td class="col-2">
                        <button class="btn btn-primary btn-sm disabled"><i class="fas fa-edit"></i></button>
                        -
                        <button class="btn btn-danger btn-sm disabled"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}