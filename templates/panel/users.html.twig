{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-12 col-md-12 col-sm-12">
                <h1>Utilisateurs ({{ pagination.getTotalItemCount }})</h1>

                <div class="mt-3">
                    <table class="table table-sm">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Incrit le</th>
                            <th>Pseudo</th>
                            <th>Email</th>
                            <th>Dernière activité</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in pagination %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.registrationDate|date('d/m/Y à H:i:s') }}</td>
                                <td>{{ user_profile_link(user) }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.lastActivityAt ? user.lastActivityAt|date('d/m/Y à H:i:s') : 'Jamais' }}</td>
                                <td><a href="#">Détails</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}