{% extends 'layouts/full-width.html.twig' %}

{% block title %}{{ category.title }}{% endblock %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('forums.index') }}">Forums</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ category.title }}</li>
        </ol>
    </nav>

    <div class="card bg-secondary mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-sm-8">{{ category.title }}</div>
                <div class="col-lg-2 col-md-3 col-sm-4 d-none d-sm-block text-center">SUJETS</div>
                <div class="col-lg-2 col-md-3 d-none d-md-block text-center">MESSAGES</div>
                <div class="col-lg-3 d-none d-lg-block">DERNIER MESSAGE</div>
            </div>
        </div>

        {% for forum in forums %}
            {{ include('forum/_forum_card.html.twig') }}
        {% endfor %}
    </div>
{% endblock %}