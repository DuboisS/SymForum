{% extends 'base.html.twig' %}

{% block title %}Liste des membres{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-12 col-md-12 col-sm-12">
                <h1>Liste des membres</h1>

                <div class="mt-3">
                    <table class="table table-sm">
                        <thead>
                        <tr>
                            <th>Pseudo</th>
                            <th>Nombre de messages</th>
                            <th>Inscription</th>
                            <th>Dernière activité</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for member in pagination %}
                            <tr>
                                <td>{{ user_profile_link(member) }}</td>
                                <td>{{ member.messages|length }}</td>
                                <td>{{ member.registrationDate|date('d/m/Y') }}</td>
                                <td>{{ member.lastActivityAt ? member.lastActivityAt|ago : 'Jamais' }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}