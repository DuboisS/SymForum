{% extends 'base.html.twig' %}

{% block title %}Membres de l'équipe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col col-lg-12 col-md-12 col-sm-12">
                <h1>Membres de l'équipe</h1>

                <div class="mt-3">
                    <h4>Administrateurs</h4>
                    <table class="table table-sm">
                        <thead>
                        <tr>
                            <th style="width: 45%">Pseudo</th>
                            <th>Inscription</th>
                            <th>Dernière activité</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for administrator in administrators %}
                            <tr>
                                <th>{{ user_profile_link(administrator) }}</th>
                                <td>{{ administrator.registrationDate|date('d/m/Y') }}</td>
                                <td>{{ administrator.lastActivityAt ? administrator.lastActivityAt|date('d/m/Y') : 'Jamais' }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <h4>Modérateurs</h4>
                    <table class="table table-sm">
                        <thead>
                        <tr>
                            <th style="width: 45%">Pseudo</th>
                            <th>Inscription</th>
                            <th>Dernière activité</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for moderator in moderators %}
                            <tr>
                                <th>{{ user_profile_link(moderator) }}</th>
                                <td>{{ moderator.registrationDate|date('d/m/Y') }}</td>
                                <td>{{ moderator.lastActivityAt ? moderator.lastActivityAt|date('d/m/Y') : 'Jamais' }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}