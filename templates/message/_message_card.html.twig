<div class="card bg-secondary mb-4 d-flex" id="{{ message.id }}">
    <div class="card-header">
        {{ thread.title }}
        <div class="float-right">
            <i class="far fa-clock"></i> {{ message.publishedAt|date('d-m-Y Ã  H:i:s') }}
        </div>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-lg-2 text-center">
                {% set author = message.author %}
                {{ user_profile_link(author) }}

                {% if author is not null %}
                    <br>
                    {% set role = user_profile_role(author) %}
                    {{ role ? role }}
                {% endif %}
            </div>
            <div class="col-lg-10">{{ message.content|purify }}</div>
        </div>

        {% if displayActions|default(false) == true %}
            <div class="row">
                <div class="col text-right">
                    {% if is_granted('EDIT', message) and (is_granted('ROLE_MODERATOR') or (thread.locked == false)) %}
                        <a class="btn btn-dark btn-sm" href="{{ path('message.edit', {'id': message.id}) }}">Editer</a>
                    {% endif %}

                    {% if not loop.first %}
                        {% if is_granted('DELETE', message) %}
                            <a class="btn btn-danger btn-sm" href="{{ path('message.delete', {'id': message.id}) }}">Supprimer</a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
